<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gavi.gopher">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application>
        
        <meta-data
            android:name="com.google.android.geo.API_KEY" android:value="@string/api_key"/>

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FoodieTheme">
        <activity
            android:name=".UserSwitcherActivity"
            android:label="@string/app_name"
            android:theme="@style/FoodieTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FoodieMainActivity"
            android:theme="@style/FoodieTheme.NoActionBar"></activity>
        <activity android:name=".EditSettingsActivity"></activity>
        <activity
            android:name=".CookMainActivity"
            android:theme="@style/CookTheme.NoActionBar"></activity>
        <activity
            android:name=".FoodDetails"
            android:label="@string/title_activity_food_details"
            android:theme="@style/FoodieTheme.NoActionBar"></activity>
    </application>

</manifest>
