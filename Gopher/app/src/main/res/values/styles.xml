<resources>

    <!-- Base application theme. -->
    <style name="FoodieTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryFoodie</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkFoodie</item>
        <item name="colorAccent">@color/colorAccentFoodie</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryFoodie</item>
        <item name="map"
    </style>

    <style name="FoodieTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CookTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryCook</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCook</item>
        <item name="colorAccent">@color/colorAccentCook</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryCook</item>
    </style>

    <style name="CookTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
