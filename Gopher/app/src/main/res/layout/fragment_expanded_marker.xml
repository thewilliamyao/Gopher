<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:context="com.example.gavi.gopher.ExpandedMarkerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/primary_background"
        android:alpha="128"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:alpha="128">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:id="@+id/imageView"
                android:layout_gravity="center"
                android:src="@drawable/ic_local_cafe_grey_24dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="230dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameText"
                    android:textColor="@color/white"
                    android:textSize="@dimen/header_size"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:text="No item selected." />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"

                    android:id="@+id/addressText"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="2" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button"
        android:background="@drawable/ic_keyboard_arrow_right_white_24dp"
        android:layout_gravity="right|center_vertical" />


</FrameLayout>
