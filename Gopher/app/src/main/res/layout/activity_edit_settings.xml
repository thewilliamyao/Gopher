<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gavi.gopher.EditSettingsActivity"
    android:gravity="center_vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/save"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:background="?attr/primary_background"
        style="@style/Base.Widget.AppCompat.ActionButton.Overflow" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textCapWords"
        android:ems="10"
        android:id="@+id/firstName"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/userImage"
        android:hint="Last Name"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/userImage"
        android:layout_gravity="center_vertical"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_person_grey_70dp"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="Add Photo"
        android:textColor="@android:color/white"
        android:id="@+id/addPhotoButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/photo_screen"
        style="@android:style/Widget.Holo.ActionButton.TextButton"
        android:textAlignment="gravity"
        android:gravity="bottom|center_horizontal"
        android:textSize="13dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textCapWords"
        android:ems="10"
        android:id="@+id/lastName"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/firstName"
        android:layout_alignStart="@+id/firstName"
        android:hint="Last Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress|textCapWords"
        android:id="@+id/street"
        android:layout_below="@+id/lastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:hint="Street"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress|textCapWords"
        android:id="@+id/city"
        android:layout_below="@+id/street"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:hint="City or Town"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress|number"
        android:id="@+id/zipcode"
        android:layout_below="@+id/city"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:hint="Zipcode"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share location with Cooks"
        android:id="@+id/shareSwitch"
        android:checked="false"
        android:layout_below="@+id/zipcode"
        android:layout_alignStart="@+id/zipcode"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allows to Cooks to view your location on a map. This allows Cooks to cater specifically to you! "
        android:id="@+id/textView"
        android:layout_below="@+id/shareSwitch"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>


</RelativeLayout>
