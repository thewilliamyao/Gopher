<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/faded_purple"
    tools:context="com.example.gavi.gopher.LoginActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/faded_purple"
        android:id="@+id/avloadingIndicatorView">

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:indicator="BallClipRotate"
            app:indicator_color="@color/colorPrimaryFoodie"
            />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/welcome"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/street"
            android:layout_gravity="center_horizontal"
            android:hint="Street Name"
            android:textColorHint="@color/faded_light_purple"
            android:textColor="@color/light_beige"
            android:backgroundTint="@color/light_purple"
            android:layout_marginTop="10dp"
            android:inputType="textPostalAddress|textCapWords" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_gravity="center_horizontal"
            android:hint="Town or City"
            android:textColorHint="@color/faded_light_purple"
            android:textColor="@color/light_beige"
            android:backgroundTint="@color/light_purple"
            android:layout_marginTop="20dp"
            android:inputType="textPostalAddress|textCapWords" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zipcode"
            android:layout_gravity="center_horizontal"
            android:hint="Zip Code"
            android:textColorHint="@color/faded_light_purple"
            android:textColor="@color/light_beige"
            android:backgroundTint="@color/light_purple"
            android:layout_marginTop="30dp"
            android:inputType="number" />


        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Signup"
            android:id="@+id/signupButton"
            android:layout_gravity="center_horizontal"
            android:background="@color/light_purple"
            android:textColor="@color/faded_purple"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Login"
            android:id="@+id/loginButton"
            android:layout_gravity="center_horizontal"
            android:background="@color/faded_light_purple"
            android:textColor="@color/faded_purple"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</RelativeLayout>
